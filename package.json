{
  "name": "dev-tools",
  "version": "0.0.0",
  "description": "A collection of universal command-line tools for professional developers to automate project setup and streamline their workflows.",
  "keywords": [
    "monorepo",
    "developer-tools",
    "cli",
    "project-scaffolding",
    "automation-tool",
    "universal-cli",
    "tooling"
  ],
  "author": "Ivany Botrel Rayn WAFFEU <wibrc.se.jc@gmail.com>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/IT-WIBRC/dev-tools#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/IT-WIBRC/dev-tools.git"
  },
  "bugs": {
    "url": "https://github.com/IT-WIBRC/dev-tools/issues"
  },
  "scripts": {
    "build": "bun --filter '*' build",
    "type-check": "bun --filter '*' type-check",
    "test": "bun --filter '*' test:coverage",
    "format": "prettier --write .",
    "lint:commit": "commitlint",
    "lint": "oxlint --fix .",
    "release": "changeset publish",
    "version": "changeset version",
    "changeset": "changeset"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "cpx": "^1.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "oxlint": "^1.11.2",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4",
    "@types/bun": "latest"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "oxlint"
    ],
    "*.{json,css,md,yaml,yml}": "prettier --write"
  }
}

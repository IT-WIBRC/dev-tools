{
  "name": "devkit",
  "version": "0.0.1",
  "description": "A universal command-line tool for developers to automate project setup and streamline their workflows.",
  "keywords": [
    "devkit",
    "cli",
    "command-line-interface",
    "project-scaffolding",
    "developer-workflow",
    "automation-tool",
    "node-js-setup",
    "monorepo",
    "template-management",
    "configurable-cli",
    "universal-cli",
    "project-initializer",
    "starter-kit",
    "developer-utility",
    "tooling",
    "scaffolder"
  ],
  "author": "Ivany Botrel Rayn WAFFEU <wibrc.se.jc@gmail.com>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/IT-WIBRC/devkit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/IT-WIBRC/devkit.git"
  },
  "bugs": {
    "url": "https://github.com/IT-WIBRC/devkit/issues"
  },
  "scripts": {
    "test": "vitest",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint:commit": "commitlint",
    "lint": "oxlint --fix .",
    "release": "changeset publish",
    "changeset": "changeset"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "cpx": "^1.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "oxlint": "^1.11.2",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "oxlint"
    ],
    "*.{json,css,md,yaml,yml}": "prettier --write"
  }
}

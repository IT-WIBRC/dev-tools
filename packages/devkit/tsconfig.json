{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "outDir": "./dist",
    "rootDir": "./src",

    "moduleResolution": "node10",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#locales/*": ["./locales/*"],
      "#scaffolding/*": ["./src/scaffolding/*"],
      "#utils/*": ["./src/utils/*"],
      "#commands/*": ["./src/commands/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__/**/*"]
}
